<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AdminUserInfo">

    <EditText
        android:id="@+id/adminlayout_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Enter ID"
        android:textColorHint="@color/whitelight"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/thin"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/adminlayout_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Name"
        android:textColorHint="@color/whitelight"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/thin"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/adminlayout_email"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Email"
        android:textColorHint="@color/whitelight"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/thin"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/adminlayout_username"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Username"
        android:textColorHint="@color/whitelight"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/thin"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/adminlayout_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="Password"
        android:textColorHint="@color/whitelight"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/thin"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:background="@drawable/buttib_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        />

</LinearLayout>